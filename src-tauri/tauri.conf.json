{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npx nuxi build",
    "beforeDevCommand": "npx nuxi dev",
    "devPath": "http://localhost:3000",
    "distDir": "app/.output/public",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Personal Cloud - Beta Preview",
    "version": "0.2.2"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    

    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "doshare.me",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "cloud.doshare.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
        
      }
      
    },
    "security": {
      "csp": "default-src 'self'; img-src *; media-src *; script-src *; style-src *"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
          "minHeight": 590,
          "minWidth": 500,
        
        "title": "Personal Cloud - Beta Preview",
        "titleBarStyle": "Transparent",
        "width": 800,
        "transparent": false,
        "additionalBrowserArgs": "--disable-features=ElasticOverscroll"
      }
    ]
  }
}
